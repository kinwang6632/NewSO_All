                                    </dxe:CheckEdit.Content>
                                </dxe:CheckEdit>
                            </Grid>

                            <TextBlock Text="工程組別" Name="lblGroupCode" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <csl:CSList x:Name="gilGroupCode" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"  />
