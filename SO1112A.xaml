                <dxe:TextEdit HorizontalAlignment="Right" x:Name="lblStatus"  Width="65" Grid.Column="1" Background="#FFCAE7EF" EditValue=""  IsReadOnly="True" VerticalAlignment="Top" Height="23" HorizontalContentAlignment="Center"  />
                
