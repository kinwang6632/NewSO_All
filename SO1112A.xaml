                </csg:CSGrid.Columns>
                    
                <csg:CSGrid.View>
                        <dxg:TableView ShowGroupPanel="False" AllowGrouping="False" AllowEditing="False" AllowFilterEditor="False" Name="TableView1" >
                            
                        </dxg:TableView>
                    </csg:CSGrid.View>
                
            </csg:CSGrid>
            <Grid Grid.Column="1" >
