                                <ColumnDefinition Width="0.29*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.12*"/>
                                <RowDefinition Height="0.12*"/>
                                <RowDefinition Height="0.12*"/>
                                <RowDefinition Height="0.12*"/>
                                <RowDefinition Height="0.12*"/>
                                <RowDefinition Height="0.12*"/>
